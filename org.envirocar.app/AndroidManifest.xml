<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="org.envirocar.app"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="internalOnly"
    android:versionCode="23"
    android:versionName="0.10.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22"/>

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true"/>
    <uses-feature
        android:name="android.hardware.location"
        android:required="true"/>
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true"/>

    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION">
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH">
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN">
    </uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name="org.envirocar.app.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Cario">

        <activity
            android:name="org.envirocar.app.BaseMainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="org.envirocar.app.activity.SettingsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.envirocar.app.BaseMainActivity"/>
        </activity>
        <activity
            android:name="org.envirocar.app.view.trackdetails.TrackDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.envirocar.app.view.carselection.CarSelectionActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="org.envirocar.app.services.SystemStartupService"
            android:enabled="true"/>

        <service
            android:name="org.envirocar.app.services.OBDConnectionService"
            android:enabled="true"/>

        <activity
            android:name="org.envirocar.app.activity.Map"
            android:label="@string/title_activity_map"
            android:theme="@android:style/Theme.Dialog">
        </activity>


        <receiver android:name="org.envirocar.app.services.SystemStartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
