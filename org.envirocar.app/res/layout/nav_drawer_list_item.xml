<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:id="@+id/nav_drawer_list_item_seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_light_cario"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/nav_drawer_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/nav_drawer_list_item_layout_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0.54"/>

        <TextView
            android:id="@+id/nav_drawer_list_item_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/nav_drawer_list_item_layout_image"
            android:layout_toRightOf="@+id/nav_drawer_list_item_layout_image"
            android:textSize="14dp"
            android:textColor="#000000"
            android:alpha="0.87"/>

    </RelativeLayout>
</LinearLayout>