<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_obd_selection_layout_paired_list_entry_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_margin="10dp"
        android:maxHeight="35dp"
        android:src="@drawable/ic_laptop"/>

    <TextView
        android:id="@+id/activity_obd_selection_layout_paired_list_entry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_weight="1"/>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:alpha="0.54"
        android:gravity="right"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/spacing_medium"
        style="?attr/borderlessButtonStyle"
        android:src="@drawable/ic_delete_black_24dp"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/activity_obd_selection_layout_paired_list_entry_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="false"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>