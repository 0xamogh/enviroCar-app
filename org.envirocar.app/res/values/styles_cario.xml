<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Cario" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_cario</item>
        <item name="popupMenuStyle">@style/PopupMenu.Cario</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Cario</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Cario</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Cario</item>
        <item name="actionModeBackground">@drawable/cab_background_top_cario</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_cario</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Cario</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="colorPrimary">@color/blue_dark_cario</item>
        <item name="colorPrimaryDark">@color/green_dark_cario</item>
        <item name="colorAccent">@color/blue_light_cario</item>
        <item name="background">@color/background_material_dark</item>
    </style>

    
    <style name="cario.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_font_cario</item>
        <!-- Drop do not work. see https://github.com/JakeWharton/ActionBarSherlock/issues/580
        <item name="android:shadowColor">@color/actionbar_title_shadow_cario</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">5</item>-->
    </style>
    
    <style name="ButtonStyle">
        <item name="android:background">@drawable/btn_cario</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="PopupMenu.Cario" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cario</item>
    </style>

    <style name="DropDownListView.Cario" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_cario</item>
    </style>

    <style name="ActionBarTabStyle.Cario" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_cario</item>
    </style>

    <style name="DropDownNav.Cario" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_cario</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cario</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_cario</item>
    </style>

    <style name="ProgressBar.Cario" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_cario</item>
    </style>

    <style name="ActionButton.CloseMode.Cario" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_cario</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Cario.Widget" parent="Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Cario</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cario</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


</resources>