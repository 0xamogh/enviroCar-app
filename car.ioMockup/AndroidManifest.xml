<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ifgi.car.io"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH" >
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" >
    </uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Cario" >

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="de.ifgi.car.io.ui.CheckListActivity"
            android:label="@string/activity_checklist_title"
            android:parentActivityName="de.ifgi.car.io.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ifgi.car.io.ui.MainActivity" />
        </activity>
        <activity
            android:name="de.ifgi.car.io.ui.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="de.ifgi.car.io.ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.ifgi.car.io.ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.ifgi.car.io.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ifgi.car.io.ui.MainActivity" />
        </activity>
        <activity
            android:name="de.ifgi.car.io.ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="de.ifgi.car.io.ui.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ifgi.car.iomockup.MainActivity" />
        </activity>
        <activity
            android:name="de.ifgi.car.io.ui.MeasurementDisplay"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="com.ifgi.obd2.obd.BackgroundService"
            android:exported="false" />
    </application>

</manifest>